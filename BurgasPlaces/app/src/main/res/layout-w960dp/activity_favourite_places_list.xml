<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:text="@string/burgas_places"
    tools:context=".views.favourites.FavouritePlacesListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/drawer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/material_drawer_primary"
            app:titleTextColor="@color/material_drawer_primary_light" />

        <FrameLayout
            android:id="@+id/content_favourite"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/content_favourite_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/content_favourite" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>